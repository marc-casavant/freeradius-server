
linelog {
	format = "This is a log message for %{User-Name}"
	destination = file

	# Disable message buffering
        buffer_count = 0
	buffer_delay = 0

	file {
		filename = ${logdir}/linelog
		permissions = 0600
		escape_filenames = no
	}
}

linelog log_stdout {
	destination = stdout

	# Disable message buffering
        buffer_count = 0
	buffer_delay = 0
}
